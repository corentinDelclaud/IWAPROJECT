# Environment Variables for User Microservice
# Copy this file to .env and customize for your environment

# Server Configuration
PORT=8081

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/iwa_users
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# Hibernate DDL Auto (update, validate, create, create-drop, none)
# WARNING: Use 'validate' or 'none' in production!
DDL_AUTO=update

# Keycloak Configuration
KEYCLOAK_ISSUER_URI=http://localhost:8080/realms/IWA_NextLevel
KEYCLOAK_JWK_SET_URI=http://localhost:8080/realms/IWA_NextLevel/protocol/openid-connect/certs

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=user-microservice-group
KAFKA_TOPIC_USER_EVENTS=user-events
KAFKA_TOPIC_KEYCLOAK_EVENTS=keycloak-events

# Swagger/OpenAPI (true for development, false for production)
SWAGGER_ENABLED=true
